<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.marbs.sixtyfourdigits"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_64d_simple"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light" > <!-- android:theme="@style/AppTheme" -->
        <activity
            android:name="com.marbs.sixtyfourdigits.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.marbs.sixtyfourdigits.BlogActivity"
            android:label="@string/title_activity_blog"
            android:parentActivityName="com.marbs.sixtyfourdigits.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.marbs.sixtyfourdigits.MainActivity" />
        </activity>
    </application>

</manifest>
