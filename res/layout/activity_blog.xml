<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/blog_vertical_margin"
    android:paddingLeft="@dimen/blog_horizontal_margin"
    android:paddingRight="@dimen/blog_horizontal_margin"
    android:paddingTop="@dimen/blog_vertical_margin"
    tools:context=".BlogActivity" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/blog_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f4f4f4"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/hello_world"
                android:textSize="24sp"
                android:textStyle="bold" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="#C20000" >
            </View>

            <TextView
                android:id="@+id/blog_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="@string/hello_world" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>